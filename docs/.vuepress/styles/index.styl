.home-blog .hero .description {
    width: max-content
}

.home-blog .hero .description span {
  display inline-block
  overflow hidden
  width 0ch
  font-size 30px
}

.home-blog .hero .description.ended::after {
  animation: 1.2s cursor steps(2, jump-none) infinite;
}

.home-blog .hero .description::after {
  content: '';
  display: inline-block;
  position: absolute;
  top 2.5px
  bottom 0
  margin auto
  width: 3.5px;
  height: 36px;
  background-color: #000;
  border-radius: 2px;
  right: -0.7ch;
}

@keyframes text-in {
  from {
    width: 0ch;
  }
  to {
    width: 1ch;
  }
}

@keyframes text-out {
  from {
    // width: 1ch;
    opacity: 0;
  }
  to {
    // width: 0ch;
    opacity: 1;
  }
}

@keyframes cursor {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}



